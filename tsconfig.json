{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
